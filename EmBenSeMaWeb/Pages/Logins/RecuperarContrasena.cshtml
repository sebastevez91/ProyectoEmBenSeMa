@page
@model SchoolMusic.Web.Pages.Logins.RecuperarContrasenaModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
    <a asp-page="/Logins/LoginUser" class="btn btn-primary mt-3">Iniciar Sesión</a>
}
else
{
    <div class="container d-flex justify-content-center vh-100">
        <div class="row justify-content-center " style="align-content: flex-start; flex-wrap: wrap;">
            <h1 class="text-center mb-4">Aula virtual de EmBenSeMa</h1>
            <div class="col-md-6 p-3 border rounded shadow bg-black text-white">
                <h3 class="mb-4">Recuperar contraseña</h3>
                <form method="post">
                    <!-- Mostrar errores del modelo -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo de Email -->
                    <div class="form-group mb-3">
                        <label asp-for="MailData.mailTo" class="form-label">Ingrese su email</label>
                        <input asp-for="MailData.mailTo" type="email" class="form-control" placeholder="Su email" />
                        <span asp-validation-for="MailData.mailTo" class="text-danger"></span>
                    </div>

                    <!-- Campo de Tipo de Usuario -->
                    <div class="form-group mb-3">
                        <label asp-for="Rol" class="form-label">Tipo de usuario</label>
                        <select asp-for="Rol" class="form-control">
                            <option value="">Seleccione un tipo de usuario</option>
                            <option value="Profesor">Profesor</option>
                            <option value="Alumno">Alumno</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <!-- Botón de envio -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-block">Recuperar contraseña</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
