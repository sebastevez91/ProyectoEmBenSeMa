@page
@model SchoolMusic.Web.Pages.Notifications.CreateNotificationModel

@{
    ViewData["Title"] = "Nueva notificación";
    Layout = "_LayoutSesion";
}

<h4 class="text-center"> Enviando mensaje </h4>
<hr />
<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notification.NotificationTo" class="form-control"/>
            <input type="hidden" asp-for="Notification.NotificationFrom" class="form-control" />
            
            <div class="form-group">
                <label asp-for="Notification.Subject" class="control-label"> Asunto </label>
                <input asp-for="Notification.Subject" placeholder="Escriba el asunto"  class="form-control" />
                <span asp-validation-for="Notification.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.Body" class="control-label"> Mensaje </label>
                <textarea asp-for="Notification.Body" cols="10" rows="6" placeholder="Escriba el mensaje" class="form-control"></textarea>
                <span asp-validation-for="Notification.Body" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value=" Enviar mensaje " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
