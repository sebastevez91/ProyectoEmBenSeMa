@page
@model SchoolMusic.Web.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Nuevo Alumno";
}

<h1>Nuevo Alumno</h1>

<h4>Datos del alumno</h4>
<hr />
<div class="container-fluid">
    <div class="row">
        <!-- Un solo formulario que contiene ambas columnas -->
        <form method="post" class="w-100">
            <div class="row">
                <!-- Primera columna (lado izquierdo) -->
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Student.NameStudent" class="control-label"></label>
                        <input asp-for="Student.NameStudent" class="form-control" />
                        <span asp-validation-for="Student.NameStudent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Surname" class="control-label"></label>
                        <input asp-for="Student.Surname" class="form-control" />
                        <span asp-validation-for="Student.Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Mail" class="control-label"></label>
                        <input asp-for="Student.Mail" class="form-control" />
                        <span asp-validation-for="Student.Mail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Dni" class="control-label"></label>
                        <input asp-for="Student.Dni" class="form-control" />
                        <span asp-validation-for="Student.Dni" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Age" class="control-label"></label>
                        <input asp-for="Student.Age" class="form-control" />
                        <span asp-validation-for="Student.Age" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Genero" class="control-label"></label>
                        <select asp-for="Student.Genero" class="form-control">
                            <option value="">Selecciona un género</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Otro">Otro</option>
                        </select>
                        <span asp-validation-for="Student.Genero" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda columna (lado derecho) -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Users.Username" class="control-label"></label>
                        <input asp-for="Users.Username" class="form-control" />
                        <span asp-validation-for="Users.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Users.UserPassword" class="control-label"></label>
                        <input asp-for="Users.UserPassword" type="password" class="form-control" />
                        <span asp-validation-for="Users.UserPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="rePassword" class="control-label">Confirmar Contraseña</label>
                        <input id="rePassword" name="rePassword" type="password" class="form-control" />
                        <span asp-validation-for="rePassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botón de envío centrado -->
            <div class="form-group text-center">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Login/LoginStudent" class="btn btn-primary btn-block">Volver a atras</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}