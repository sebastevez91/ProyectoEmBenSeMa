@page
@model SchoolMusic.Web.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Tu perfil";
    Layout = "_LayoutSesion";
}

<h1>Datos del alumno </h1>

<div style="background-color:black; color:white; border: 1px solid #dddddd;">
    <h4> Alumno de EmBenSeMa</h4>
    <hr />
    <dl class="row" style="padding:2%;">
        <dt class="col-sm-2">
            Nombre 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.NameStudent)
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.Surname)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.Mail)
        </dd>
        <dt class="col-sm-2">
            Dni
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.Dni)
        </dd>
        <dt class="col-sm-2">
            Edad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.Age)
        </dd>
        <dt class="col-sm-2">
            Genero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Student.Genero)
        </dd>
    </dl>
    <div>
        <form method="post">
            <div class="col-sm-3" style="display: ruby-text; margin-left: 2%;">
                <input type="hidden" asp-for="Inscription.idInscription" />
                <input type="hidden" asp-for="Inscription.idStudent" />
                <input type="hidden" asp-for="Inscription.idCursada" />
                <input type="hidden" asp-for="Inscription.dateInscription" />
                <div class="form-group">
                    <label asp-for="Inscription.Status" class="form-label"> Calificar cursada </label>
                    <select asp-for="Inscription.Status" class="form-control">
                        <option value="">Seleccione una opción</option>
                        <option value="Aprobado">Aprobado</option>
                        <option value="Desaprobado">Desaprobado</option>
                        <option value="Cursando">Cursando</option>
                    </select>
                    <span asp-validation-for="Inscription.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar calificación" class="btn btn-primary" />
                </div>
            </div>            
        </form>
    </div>
    
</div>
