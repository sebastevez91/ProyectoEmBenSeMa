@page
@model SchoolMusic.Web.Pages.Cursadas.EditModel

@{
    ViewData["Title"] = "Editar cursada";
    Layout = "_LayoutSesion";
}

    <h1>Modificar tu cursada</h1>
    @{
        if(Model.Cursada.Course != null)
        {
           <h4>Cursada de @Model.Cursada.Course.Instrument de @Model.Cursada.StarTime.Hour a @Model.Cursada.EndTime.Hour hs</h4> 
        }        
    }
    
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Cursada.IdCursada" />
                <input type="hidden" asp-for="Cursada.IdTeacher" />
                <input type="hidden" asp-for="Cursada.IdCourse" />
                <div class="form-group">
                    <label asp-for="Cursada.Initiation" class="control-label"></label>
                    <input asp-for="Cursada.Initiation" class="form-control" />
                    <span asp-validation-for="Cursada.Initiation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.Finish" class="control-label"></label>
                    <input asp-for="Cursada.Finish" class="form-control" />
                    <span asp-validation-for="Cursada.Finish" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.StarTime" class="control-label"></label>
                    <input asp-for="Cursada.StarTime" class="form-control" />
                    <span asp-validation-for="Cursada.StarTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.EndTime" class="control-label"></label>
                    <input asp-for="Cursada.EndTime" class="form-control" />
                    <span asp-validation-for="Cursada.EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.Vacantes" class="control-label"></label>
                    <input asp-for="Cursada.Vacantes" class="form-control" />
                    <span asp-validation-for="Cursada.Vacantes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.Days" class="control-label"></label>
                    <input asp-for="Cursada.Days" class="form-control" />
                    <span asp-validation-for="Cursada.Days" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.Description" class="control-label"></label>
                    <input asp-for="Cursada.Description" class="form-control" />
                    <span asp-validation-for="Cursada.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cursada.PayFee" class="control-label"></label>
                    <input asp-for="Cursada.PayFee" class="form-control" />
                    <span asp-validation-for="Cursada.PayFee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value=" Actualizar " class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
