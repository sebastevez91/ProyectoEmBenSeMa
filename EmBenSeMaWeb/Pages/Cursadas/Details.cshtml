@page
@model SchoolMusic.Web.Pages.Cursadas.DetailsModel

@{
    ViewData["Title"] = "Detalles de cursada";
}

<h1>Detalles de la cursada</h1>
<div>
    <h4>Cursada de </h4>
</div>
    <div class="content">
        <div class="row">
        @foreach(var cursada in Model.Cursadas)
        {
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-12">
                        Fecha de inicio de cursada:
                    </dt>
                    <dd class="col-12">
                        @cursada.Initiation.ToString("yyyy/MM/dd")
                    </dd>

                    <dt class="col-12">
                        Fecha de finalización de cursada:
                    </dt>
                    <dd class="col-12">
                        @cursada.Finish.ToString("yyyy/MM/dd")
                    </dd>

                    <dt class="col-12">
                        Profesor:
                    </dt>
                    <dd class="col-12">
                        @cursada.Teacher.NameTeacher  @cursada.Teacher.Surname
                    </dd>

                    <dt class="col-12">
                        Horario:
                    </dt>
                    <dd class="col-12">
                        @cursada.StarTime.ToString("HH:mm") a @cursada.EndTime.ToString("HH:mm")
                    </dd>

                    <dt class="col-12">
                        Vacantes:
                    </dt>
                    <dd class="col-12">
                        @cursada.Vacantes
                    </dd>

                    <dt class="col-12">
                        Días de cursada:
                    </dt>
                    <dd class="col-12">
                        @cursada.Days
                    </dd>

                    <dt class="col-12">
                        Descripción de contenido:
                    </dt>
                    <dd class="col-12">
                        @cursada.Description
                    </dd>

                    <dt class="col-12">
                        Cuota por mes:
                    </dt>
                    <dd class="col-12">
                        $ @cursada.PayFee
                    </dd>
                    <a asp-page="./Edit" asp-route-id="@cursada?.IdCursada" class="btn btn-primary">Modificar</a>
                </dl>
             </div>
        }
        </div>
    </div>

