@page 
@model SchoolMusic.Web.Pages.Tablons.indexModel

@{
    ViewData["Title"] = "Tablón de cursada";
    Layout = "_LayoutSesion";
}

<h1>Cursada</h1>

<div>
    <h4>Tablon</h4>
    <hr />
    <dl class="row">
        @if(Model.Tablon != null)
        {
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tablon.idCursada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tablon.idCursada)
            </dd>
        }else if(Model.Tablon == null)
        {
            <dt class="col-sm-2">
                <span> Esta cursada no tiene ningún tablón </span>
                <form action="/" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Tablon.idCursada"/>
                
                </form>
                <a asp-page="" class="btn btn-primary"> Crear uno Tablón </a>
                <</dt>
            
        }

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tablon?.idTablon">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
